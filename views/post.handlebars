{{#if post}}
<div class="container">
  <div class="post-container">
    <h2 class="post-title">{{post.title}}</h2>
    <p class="post-content">{{post.content}}</p>
    <p class="post-author">Written by: {{post.user.username}}</p>
    <p class="post-date">Posted on: {{format_date post.createdAt}}</p>
  </div>

  <div class="comments-container">
    <h3>Comments:</h3>
    {{#each post.comments as |comment|}}
    <div class="comment">
      <p class="comment-content">{{comment.content}}</p>
      <p class="comment-author">By: {{comment.user.username}}</p>
      <p class="comment-date">Posted on: {{format_date comment.createdAt}}</p>
    </div>
    {{/each}}
  </div>

  {{#if loggedIn}}
  <div class="add-comment-container">
    <h3>Add a comment:</h3>
    <form class="add-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" rows="4"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
  {{/if}}
</div>
{{else}}
<div class="container">
  <h2 class="text-center">Post not found</h2>
</div>
{{/if}}

<script src="/js/post.js"></script>
